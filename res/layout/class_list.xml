<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
           
            android:background="#500000"
            android:clickable="true"
            android:alignmentMode="alignBounds"
            android:paddingRight="20dp"
            tools:context=".MainActivity$Class_listActivity" >
              
    
      <ImageButton
		        android:id="@+id/share_menub"
		        android:layout_width="45sp"
		        android:layout_height="40sp"
		        android:layout_marginLeft="7px"
		        android:layout_marginTop="7px"
		        android:background="@drawable/menu_b"
		        android:clickable="true"
		        android:contentDescription="@string/title_menu"
		        android:scaleType="centerCrop"
		        android:src="@drawable/menu_b" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/return_b"
        android:background="#500000"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />



    
    <ImageButton
    	    android:id="@+id/return_b"
    	    android:layout_width="45dp"
    	    android:layout_height="40dp"
    	    android:layout_marginRight="7dp"
    	    android:layout_alignTop="@+id/event_menub"
    	    android:layout_alignParentRight="true"
    	    android:background="@drawable/back_b"
    	    android:clickable="true"
    	    android:contentDescription="@string/title_section1"
    	    android:scaleType="centerCrop"
    	    android:src="@drawable/back_b" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/return_b"
        android:layout_centerHorizontal="true"
        android:gravity="center|center"
        android:text="Share?"
        android:textColor="#500000"
        android:textSize="@dimen/mid_text" />
    

    <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="40dp"
            android:layout_width="fill_parent"
            android:text="Extra-credit Opportunities ?"
            android:typeface="serif"
            android:layout_columnSpan="2"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:textSize="38sp"
            android:textColor="#ECE5DB"/>
   

    

</RelativeLayout>

 

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:background="#E1DED9"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".MainActivity$ShareActivity.java" >

    <ImageButton
        android:id="@+id/share_menub"
        android:layout_width="45sp"
        android:layout_height="40sp"
        android:layout_marginLeft="7px"
        android:layout_marginTop="7px"
        android:background="@drawable/menu_b"
        android:clickable="true"
        android:contentDescription="@string/title_menu"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_b" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/return_b"
        android:background="#500000"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />

    <ImageButton
        android:id="@+id/return_b"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/share_menub"
        android:layout_marginRight="7px"
        android:background="@drawable/back_b"
        android:clickable="true"
        android:contentDescription="@string/title_section1"
        android:scaleType="centerCrop"
        android:src="@drawable/back_b" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/return_b"
        android:layout_centerHorizontal="true"
        android:gravity="center|center"
        android:text="Share?"
        android:textColor="#500000"
        android:textSize="@dimen/mid_text" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="15" >

        <Space
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_row="11" />

        <Space
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_row="13" />
    </GridLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/selectpic_button"
        android:layout_marginTop="44dp"
        android:background="#FBF8EC"
        android:text="Social Media" />

    <Button
        android:id="@+id/takepic_button"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="118dp"
        android:background="#FBF8EC"
        android:text="Take a Pic" />

    <Button
        android:id="@+id/selectpic_button"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/takepic_button"
        android:layout_marginTop="51dp"
        android:background="#FBF8EC"
        android:text="Select a Pic" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="top"
    android:background="@drawable/aggieland_gis" 
    tools:context=".MainActivity$Log_optionsActivity" >
    
    
     <ImageButton
        android:id="@+id/log_menub"
        android:layout_width="45sp"
        android:layout_height="40sp"
        android:layout_marginLeft="7px"
        android:layout_marginTop="7px"
        android:background="@drawable/menu_b"
        android:clickable="true"
        android:contentDescription="@string/title_menu"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_b" />
     
     
    	<LinearLayout 
        	android:layout_height="match_parent"
        	android:layout_width="0dip"
        	android:layout_weight="0.63"
        	android:gravity="bottom|center"
        	android:orientation="vertical" > 
        
       
			        <Button
			            android:id="@+id/login_b"
			            android:layout_marginBottom="25dp"
			            android:layout_width="140dp"
			            android:layout_height="50dp"
			            android:background="#8F8F8C"
			            android:text="Login"
			            android:textSize="@dimen/small_text"
			            android:textColor="#E8E5DF"
			            android:clickable="true" />
			
			        <Button
			            android:id="@+id/create_login_b"
			            android:layout_width="140dp"
			            android:layout_height="50dp"
			            android:layout_marginBottom="25dp"
			            android:background="#5F574F"
			            android:clickable="true"
			            android:text="Sign up"
			            android:textColor="#E8E5DF"
			            android:textSize="@dimen/small_text" />
   
        </LinearLayout>

    	<ImageButton
    	    android:id="@+id/return_b"
    	    android:layout_width="45dp"
    	    android:layout_height="40dp"
    	    android:layout_marginRight="7px"
    	    android:layout_marginTop="7px"
    	    android:background="@drawable/back_b"
    	    android:clickable="true"
    	    android:contentDescription="@string/title_section1"
    	    android:scaleType="centerCrop"
    	    android:src="@drawable/back_b" />

</LinearLayout>
